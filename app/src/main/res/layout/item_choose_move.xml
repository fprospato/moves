<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:paddingBottom="5dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/vChooseMoveView"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#2196F3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvChooseMove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Move"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/vChooseMoveView"
            app:layout_constraintEnd_toEndOf="@+id/vChooseMoveView"
            app:layout_constraintStart_toStartOf="@+id/vChooseMoveView"
            app:layout_constraintTop_toTopOf="@+id/vChooseMoveView" />

        <Button
            android:id="@+id/btnChooseMove"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/vChooseMoveView"
            app:layout_constraintEnd_toEndOf="@+id/vChooseMoveView"
            app:layout_constraintStart_toStartOf="@+id/vChooseMoveView"
            app:layout_constraintTop_toTopOf="@+id/vChooseMoveView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>