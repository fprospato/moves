    <TextView
        android:id="@+id/tvFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#1A1919"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnFood"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@+id/btnFood"
        app:layout_constraintTop_toTopOf="@+id/btnFood" />

    <Button
        android:id="@+id/btnFood"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/middleView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vFoodIndicator"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="@+id/tvFood"
        app:layout_constraintStart_toStartOf="@+id/tvFood"
        app:layout_constraintTop_toBottomOf="@+id/tvFood" />

    <TextView
        android:id="@+id/tvEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#1A1A1A"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnEvent"
        app:layout_constraintStart_toStartOf="@+id/btnEvent"
        app:layout_constraintTop_toTopOf="@+id/btnEvent" />

    <Button
        android:id="@+id/btnEvent"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="80dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/vFoodIndicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/middleView"
        app:layout_constraintTop_toTopOf="@+id/btnFood" />

    <View
        android:id="@+id/vEventIndicator"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/vFoodIndicator"
        app:layout_constraintEnd_toEndOf="@+id/tvEvent"
        app:layout_constraintStart_toStartOf="@+id/tvEvent"
        app:layout_constraintTop_toTopOf="@+id/vFoodIndicator" />

    <ImageView
        android:id="@+id/ivDistance"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/btnDistance"
        app:layout_constraintStart_toStartOf="@+id/btnDistance"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:srcCompat="@drawable/place" />

    <Button
        android:id="@+id/btnDistance"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnDistance"
        app:layout_constraintEnd_toStartOf="@+id/btnPrice"
        app:layout_constraintStart_toStartOf="@+id/btnDistance"
        app:layout_constraintTop_toTopOf="@+id/btnDistance" />

    <ImageView
        android:id="@+id/ivPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/ivDistance"
        app:layout_constraintEnd_toEndOf="@+id/btnPrice"
        app:layout_constraintStart_toStartOf="@+id/btnPrice"
        app:layout_constraintTop_toTopOf="@+id/ivDistance"
        app:srcCompat="@drawable/local_atm" />

    <Button
        android:id="@+id/btnPrice"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintStart_toEndOf="@+id/btnDistance"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <TextView
        android:id="@+id/tvPriceLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnPrice"
        app:layout_constraintEnd_toEndOf="@+id/btnPrice"
        app:layout_constraintStart_toStartOf="@+id/btnPrice"
        app:layout_constraintTop_toTopOf="@+id/btnPrice" />

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vTopLine" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMoveResults"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vBottomLine" />

    <TextView
        android:id="@+id/tvFriend"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:text="Friend"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnAddFriends"
        app:layout_constraintStart_toStartOf="@+id/btnAddFriends"
        app:layout_constraintTop_toTopOf="@+id/btnAddFriends" />

    <TextView
        android:id="@+id/tvNoMoves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="No moves found"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rvMoveResults" />

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rvMoveResults">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view2">

            <View
                android:id="@+id/view5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"></View>

            <TextView
                android:id="@+id/tvRightPopupTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Price"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnPriceLevel2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:text="$$"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/btnPriceLevel1"
                app:layout_constraintStart_toEndOf="@+id/btnPriceLevel1"
                app:layout_constraintTop_toTopOf="@+id/btnPriceLevel1" />

            <Button
                android:id="@+id/btnPriceLevel4"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="65dp"
                android:layout_height="0dp"
                android:layout_marginEnd="10dp"
                android:text="$$$$"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/btnPriceLevel3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/btnPriceLevel3"
                app:layout_constraintTop_toTopOf="@+id/btnPriceLevel3"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/btnPriceLevel3"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="55dp"
                android:layout_height="0dp"
                android:text="$$$"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/btnPriceLevel2"
                app:layout_constraintStart_toEndOf="@+id/btnPriceLevel2"
                app:layout_constraintTop_toTopOf="@+id/btnPriceLevel2"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btnPriceLevel1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:layout_marginBottom="8dp"
                android:text="$"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/view5"
                app:layout_constraintStart_toStartOf="@+id/tvRightPopupTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvRightPopupTitle" />

            <EditText
                android:id="@+id/etDistance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="2dp"
                android:ems="10"
                android:hint="Distance"
                android:inputType="numberDecimal"
                app:layout_constraintEnd_toStartOf="@+id/tvMiles"
                app:layout_constraintStart_toStartOf="@+id/view5"
                app:layout_constraintTop_toTopOf="@+id/btnPriceLevel1" />

            <TextView
                android:id="@+id/tvMiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="miles"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/etDistance"
                app:layout_constraintEnd_toEndOf="@+id/view5"
                app:layout_constraintTop_toTopOf="@+id/etDistance" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/ivAddFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/btnAddFriends"
        app:layout_constraintEnd_toEndOf="@+id/btnAddFriends"
        app:layout_constraintStart_toStartOf="@+id/btnAddFriends"
        app:layout_constraintTop_toTopOf="@+id/btnAddFriends"
        app:srcCompat="@drawable/group" />

    <Button
        android:id="@+id/btnAddFriends"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintStart_toEndOf="@+id/btnPrice"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <View
        android:id="@+id/middleView"
        android:layout_width="0.25dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/rvMoveResults"
        app:layout_constraintTop_toTopOf="@+id/rvMoveResults" />


</androidx.constraintlayout.widget.ConstraintLayout>